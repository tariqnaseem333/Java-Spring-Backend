package controlStructures.iterationControlStructures;

public class ReverseTrianglePattern {
	
	public static void main(String[] args) {
		
//		Print the Pattern for n = 4 :-
//		****
//		***
//		**
//		*
		
	     int num = 5;
	     
	     int i = 1;
	     while( i <= num ) {
	         int j = 1;
	         while( j <= (num-i+1) ) {
	             System.out.print("*");
	             j++;
	         }
	         i++;
	         System.out.println();
	     }
	     
	}

}
